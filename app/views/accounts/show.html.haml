.header
  .header_left
    = link_to request.referer || root_path do
      = image_tag 'arror.png'
  .header_center
    %p.userName{ data: { following_id: @user.id, follower_id: current_user.id } }= @user.username
  .header_right
    %button.followBtn#followBtn.hidden Follow
    %button.followBtn#unfollowBtn.hidden unFollow


.avatar
  = image_tag @user.profile.avatar, class: 'avatar_image', id: 'avatar-image'

= render 'common/user_detail', user: @user

= javascript_pack_tag 'account'