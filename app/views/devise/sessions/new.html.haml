.mv
  = image_tag 'auth_image', class: 'mv_image'
.form
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = f.label :email, class: 'form_label'
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form_text'

    = f.label :password, class: 'form_label'
    = f.password_field :password, autocomplete: "current-password", class: 'form_text'

    = link_to 'Forgot password?', new_user_password_path, class: 'form_link'
    = f.submit "Log in", class: 'form_button'