.header
  .header_left
    = link_to 'Cance', request.referer || root_path, class: 'header_left__canceBtn'
  .header_center
    %p Status
  .header_right
    %input.actionBtn{ type: 'submit', form: 'postForm', value: 'POST' }

- if @post.errors.any?
  - @post.errors.full_messages.each do |message|
    = message

.container
  .accountsList
    = image_tag current_user.profile.avatar, class: 'accountsList_avatar'
    %p.accountsList_username= current_user.username

  = form_with model: @post, id: 'postForm', local:true do |f|
    = f.text_field :caption, placeholder: "What's on your mind ?", class: 'form_text'
    = f.file_field :images, multiple: true

